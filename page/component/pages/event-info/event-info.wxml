<view class="index">
  <view class="index-hd">
    <image class="index-pic" src="resources/pride.jpg"></image>
  </view>
  <view class="index-bd">
    <view class="index-title">{{item.title}}</view>
    <view class="index-subtitle">
      <view>{{item.titleEn}}</view>
      <view>{{item.time}}</view>
    </view>
    <view class="text-box">
      <text selectable='true'>{{item.place}}</text>
      <text selectable='true'>{{item.placeEn}}</text>
    </view>
    <view class="text-box">
      <text selectable='true'>{{item.address}}</text>
      <text selectable='true'>{{item.addressEn}}</text>
    </view>
    <view class="text-box">
      <text selectable='true'>{{item.price}}</text>
      <text selectable='true'>{{item.priceEn}}</text>
      <text selectable='true'>{{item.other}}</text>
      <text selectable='true'>{{item.otherEn}}</text>
    </view>
  </view>
</view>